<div class="container mt-5">
  <div>
    <h1>Create a new movie list</h1>
  </div>

  <div class="row">
    <div class="col-6">
      <%= simple_form_for(@list) do |f| %>
        <%= f.input :name, placeholder: 'Add a list name' %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Create", class: "btn btn-blue" %>
      <% end %>
    </div>
  </div>
</div>
